	pmcid = {PMC5390968},
	keywords = {Action Potentials, Anesthesia, General, Animals, Brain, Brain Mapping, Cerebrovascular Circulation, Diffusion, Diffusion magnetic resonance imaging, Dose-Response Relationship, Drug, Electric Stimulation, Isoflurane, Male, Medetomidine, Oxygen, Rats, Wistar, Wakefulness, Water},
