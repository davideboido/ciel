@article{hugon_18f2-fluoro-2-deoxy-sorbitol_2021,
	title = {[{18F}]2-{Fluoro}-2-deoxy-sorbitol {PET} {Imaging} for {Quantitative} {Monitoring} of {Enhanced} {Blood}-{Brain} {Barrier} {Permeability} {Induced} by {Focused} {Ultrasound}},
