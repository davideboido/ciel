	author = {Marty, Benjamin and Larrat, Benoit and Van Landeghem, Maxime and Robic, Caroline and Robert, Philippe and Port, Marc and Le Bihan, Denis and Pernot, Mathieu and Tanter, Mickael and Lethimonnier, Franck and Mériaux, Sébastien},
