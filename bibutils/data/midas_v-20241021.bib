@article{conti_regulation_2022,
	title = {Regulation of {P}-glycoprotein and {Breast} {Cancer} {Resistance} {Protein} {Expression} {Induced} by {Focused} {Ultrasound}-{Mediated} {Blood}-{Brain} {Barrier} {Disruption}: {A} {Pilot} {Study}},
