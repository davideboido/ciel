	keywords = {Animals, Blood-Brain Barrier, Contrast Media, Drug Delivery Systems, Endothelial Cells, Male, Models, Biological, Rats, Rats, Sprague-Dawley, Sound},
	pages = {1948--1958},
}

@article{chaari_spatio-temporal_2014,
	title = {Spatio-temporal wavelet regularization for parallel {MRI} reconstruction: application to functional {MRI}},
